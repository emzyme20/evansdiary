<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
    <!--<![endif]-->

    <link rel="shortcut icon" href="/Content/images/favicon.ico">
    <link rel="apple-touch-icon-precomposed" href="/Content/images/athletics-pictogram-152-216355.png">
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="msapplication-TileImage" content="/Content/images/athletics-pictogram-144-216355.png">
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/Content/images/athletics-pictogram-152-216355.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/Content/images/athletics-pictogram-144-216355.png">
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/Content/images/athletics-pictogram-120-216355.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/Content/images/athletics-pictogram-114-216355.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/Content/images/athletics-pictogram-72-216355.png">
    <link rel="apple-touch-icon-precomposed" href="/Content/images/athletics-pictogram-57-216355.png">
    <link rel="icon" href="/Content/images/athletics-pictogram-32-216355.png" sizes="32x32">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles")
    
    @Html.Partial("~/Views/Shared/_GoogleAnalytics.cshtml")
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top" style="background-color: #343a40;">
            <div class="container-fluid">
                @Html.ActionLink("Evan's Diary", "Index", "Home", null, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto justify-content-end">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link", aria_current = "page" })
                        @Html.ActionLink("The Diary", "Index", "Diary", null, new { @class = "nav-link" })
                        @Html.ActionLink("Athletics", "Index", "Athletics", null, new { @class = "nav-link" })
                        @Html.ActionLink("Family", "Index", "Family", null, new { @class = "nav-link" })
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Evan's Diary.</p>
        </footer>
    </div>

    @Scripts.Render("~/scripts/ed-init")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    
    <script type="text/javascript">
        $(function () {
            var a = document.querySelector(`a[href="${location.pathname}"].nav-link`);
            if (a) {
                a.classList.add("active");
                a.setAttribute("aria-current", "page");
            }
        });

    </script>

    @RenderSection("PageScripts", false)
</body>
</html>
