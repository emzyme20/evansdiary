@using Microsoft.Ajax.Utilities
@model EvansDiary.Web.ViewModels.DiaryEntryViewModel

@{
    ViewBag.Title = Model.Title ?? string.Empty;
}

<section id="diary-page">
    <h2>Week @(Model.Tag)</h2>

    <h3>@ViewBag.Title</h3>

    <div class="diary-entries container content">
        @{
            var imageOne = Model.GetImage(0);
            var imageTwo = Model.GetImage(1);
            var imageThree = Model.GetImage(2);
            var imageFour = Model.GetImage(3);
        }
        @if (!Model.EntryOne.IsNullOrWhiteSpace())
        {
            if (!Model.EntryTwo.IsNullOrWhiteSpace())
            {
                <h2 class="content-subhead">Emma's Entry</h2>
            }
            @Html.Raw(Model.EntryOne)

            if (Model.EntryOneAdditionalImage != null)
            {
                <div class="pure-g">
                    <div class="pure-u-1 additional-image">
                        <img class="pure-img-responsive" src="@Model.EntryOneAdditionalImage.GetUrl()" alt="@Model.EntryOneAdditionalImage.Caption">
                    </div>
                </div>
            }
        }

        <div class="pure-g">
            <div class="pure-u-1-2 pure-u-md-1-4">
                <img class="pure-img-responsive" src="@imageOne.GetUrl()" alt="@imageOne.Caption">
                <aside class="photo-box-caption">
                    <span>@imageOne.Caption</span>
                </aside>
            </div>
            <div class="pure-u-1-2 pure-u-md-1-4">
                <img class="pure-img-responsive" src="@imageTwo.GetUrl()" alt="@imageTwo.Caption">
                <aside class="photo-box-caption">
                    <span>@imageTwo.Caption</span>
                </aside>
            </div>
            <div class="pure-u-1-2 pure-u-md-1-4">
                <img class="pure-img-responsive" src="@imageThree.GetUrl()" alt="@imageThree.Caption">
                <aside class="photo-box-caption">
                    <span>@imageThree.Caption</span>
                </aside>
            </div>
            <div class="pure-u-1-2 pure-u-md-1-4">
                <img class="pure-img-responsive" src="@imageFour.GetUrl()" alt="@imageFour.Caption">
                <aside class="photo-box-caption">
                    <span>@imageFour.Caption</span>
                </aside>
            </div>
        </div>

        @if (!Model.EntryTwo.IsNullOrWhiteSpace())
        {
            <h2 class="content-subhead">Caroline's Entry</h2>
            @Html.Raw(Model.EntryTwo)
        }
    </div>

</section>